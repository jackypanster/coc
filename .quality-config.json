{
  "name": "Code Quality Configuration",
  "description": "Centralized configuration for code quality tools and standards",
  "version": "1.0.0",
  "standards": {
    "complexity": {
      "maxCyclomaticComplexity": 10,
      "maxFunctionLength": 50,
      "maxParameters": 5,
      "maxNestingDepth": 4,
      "maxCallbackNesting": 3,
      "maxFileLength": 300,
      "maxStatementsPerFunction": 20
    },
    "duplication": {
      "threshold": 10,
      "minLines": 5,
      "minTokens": 50
    },
    "security": {
      "maxCriticalVulnerabilities": 0,
      "maxHighVulnerabilities": 0,
      "maxMediumVulnerabilities": 5
    },
    "maintainability": {
      "maxTechnicalDebt": "A",
      "minTestCoverage": 80,
      "maxCodeSmells": 10
    }
  },
  "tools": {
    "eslint": {
      "configFile": "login/.eslintrc.js",
      "extensions": ["js"],
      "ignorePatterns": ["node_modules/", "*.min.js"]
    },
    "jscpd": {
      "threshold": 10,
      "reporters": ["console", "json", "html"],
      "ignore": ["node_modules/**", "**/*.min.js"]
    },
    "audit": {
      "level": "moderate",
      "skipDev": false
    }
  },
  "gates": {
    "complexity": {
      "enabled": true,
      "blocking": true,
      "maxViolations": 0
    },
    "duplication": {
      "enabled": true,
      "blocking": false,
      "maxPercentage": 10
    },
    "security": {
      "enabled": true,
      "blocking": true,
      "maxVulnerabilities": 0
    },
    "linting": {
      "enabled": true,
      "blocking": true,
      "maxErrors": 0,
      "maxWarnings": 10
    }
  },
  "reporting": {
    "formats": ["console", "json", "html"],
    "outputDir": "./quality-reports",
    "retention": {
      "days": 30,
      "maxReports": 50
    }
  },
  "automation": {
    "preCommit": {
      "enabled": true,
      "checks": ["lint", "complexity", "security"]
    },
    "ci": {
      "enabled": true,
      "checks": ["lint", "complexity", "duplication", "security"],
      "failOnGate": true
    },
    "scheduled": {
      "enabled": true,
      "frequency": "weekly",
      "day": "monday",
      "time": "09:00",
      "checks": ["all"]
    }
  },
  "notifications": {
    "reminder": {
      "enabled": true,
      "intervalDays": 7,
      "changeThreshold": 5
    },
    "gates": {
      "onFailure": true,
      "onSuccess": false
    }
  }
}